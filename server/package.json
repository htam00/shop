{
  "name": "ecommerce",
  "version": "0.0.1",
  "description": "Simple ecommerce ",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "prod": "npm run build && node dist/app.js",
    "dev": "nodemon --watch . --exec \"ts-node server.ts\" -e ts",
    "test": "jest --no-cache --detectOpenHandles"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "keywords": [
    "ecommerce"
  ],
  "author": "htam",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.24",
    "@types/supertest": "^2.0.8",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jest": "^24.9.0",
    "mongoose": "^5.8.2",
    "morgan": "^1.9.1",
    "redis": "^3.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/dotenv": "^8.2.0",
    "@types/mongoose": "^5.5.34",
    "nodemon": "^2.0.2",
    "typescript": "^3.7.3"
  }
}
